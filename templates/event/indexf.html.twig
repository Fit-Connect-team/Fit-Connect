{% extends 'client/index.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
<style>
    .event-card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-5px);
    }

    .event-image {
        height: 150px;
        object-fit: cover;
    }

    .event-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .event-details {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    .event-icons a {
        margin-right: 5px;
        transition: all 0.3s ease;
    }

    .event-icons a:hover {
        transform: scale(1.1);
    }
</style>

<div class="container">
    <div class="row">
        {% for event in events %}
        <div class="col-md-4 mb-4">
            <div class="card event-card">
                <img src="{{ asset('img/' ~ event.image) }}" class="card-img-top event-image" alt="#" style="height: 150px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title event-title">{{ event.nom }}</h5>
                    <p class="card-text event-details">{{ event.description }}</p>
                    <p class="card-text event-details">
                        <strong>Lieu:</strong>
                        {{ event.lieu }}
                    </p>
                    <p class="card-text event-details">
                        <strong>Date:</strong>
                        {{ event.date ? event.date|date('Y-m-d ') : '' }}
                    </p>
                    <div class="btn-group event-icons" role="group">
                        <a href="{{ path('app_participation_newp', {'eventId': event.id}) }}" class="btn btn-primary">Participate</a>
                        <a href="{{ path('app_event_showf', {'id': event.id}) }}" class="btn btn-success rounded-pill py-2 px-4">
                            <i class="fa fa-eye ">{{ event.nbVue }}</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <p>No records found</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
